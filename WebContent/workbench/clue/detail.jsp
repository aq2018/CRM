				"workbench/clue/addAssociateAct.do",
				sendData,
				function(json){
					if(json.success){
						$("#bundModal").modal("hide");
						getAssociateActs();
					}else{
						alert("关联失败了");
					}
				}
			)
		});
		
		$("#convertBtn").click(function(){
			window.location.href="workbench/clue/convert.jsp?clueId=${param.id}&fullname=${clue.surname}${clue.calls}&company=${clue.company}&owner=${clue.owner}&pid_user=${clue.pid_user}";
